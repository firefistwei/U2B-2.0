<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_fabric"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bar" >

        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/title_btn_back"
            android:onClick="oneparty_back"
            android:text="Back"
            android:textColor="#fff"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="U2B活动"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/title_btn_right"
            android:text="More"
            android:textColor="#fff"
            android:textSize="15dp" />
    </RelativeLayout>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:scrollbarStyle="outsideOverlay" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/one_activ_img_head"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/avatar_background_white"
                    android:padding="4dip"
                    
                    android:src="@drawable/random_head2" />

                <TextView
                    android:id="@+id/one_activ_tv_person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dip"
                    android:layout_toRightOf="@id/one_activ_img_head"
                    android:text="韦泽鹏"
                    android:textColor="#454545"
                    android:textSize="18dip"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/one_activ_tv_person_sex"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/one_activ_tv_person_name"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/one_activ_tv_person_name"
                    android:padding="2dp"
                    android:src="@drawable/sex_1" />

                <TextView
                    android:id="@+id/one_activ_tv_person_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/one_activ_tv_person_name"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dip"
                    android:layout_toRightOf="@id/one_activ_img_head"
                    android:text="信誉等级：5星"
                    android:textColor="#78ac04"
                    android:textSize="14dip" />

                <TextView
                    android:id="@+id/one_activ_tv_person_sig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/one_activ_tv_person_level"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dip"
                    android:layout_toRightOf="@id/one_activ_img_head"
                    android:text="很开心认识很多的新朋友，灯塔真是一款非常好的软件"
                    android:textColor="#454545"
                    android:textSize="14dip" />
            </RelativeLayout>
            
              <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/about_top_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dip" >

                <TextView
                    android:layout_width="60dip"
                    android:layout_height="30dip"
                    android:layout_marginLeft="8dip"
                    android:gravity="center_vertical"
                    android:text="活动名"
                    android:textColor="#800080"
                    android:textSize="14sp" />

                <TextView
				    android:id="@+id/active_one_a_name"
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:text="你讲笑话我请客"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dip"
                    android:textColor="#1E90ff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:background="@drawable/about_mid_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dip" >

                <TextView
                    android:layout_width="60dip"
                    android:layout_height="30dip"
                    android:layout_marginLeft="8dip"
                    android:gravity="center_vertical"
                    android:text="活动时间"
                    android:textColor="#800080"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/active_one_a_time"
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:gravity="center_vertical"
                    android:text="5/25 下午4:00"
                    android:paddingLeft="8dip"
                    android:textColor="#333333"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:background="@drawable/about_mid_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dip" >

                <TextView
                    android:layout_width="60dip"
                    android:layout_height="30dip"
                    android:layout_marginLeft="8dip"
                    android:gravity="center_vertical"
                    android:text="活动地点"
                    android:textColor="#800080"
                    android:textSize="14sp" />

                <TextView
				    android:id="@+id/active_one_a_position"
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:gravity="center_vertical"
                    android:text="西北大学半岛咖啡厅 "
                    android:paddingLeft="8dip"
                    android:textColor="#333333"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:background="@drawable/about_bottom_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dip" >

                <TextView
                    android:layout_width="60dip"
                    android:layout_height="30dip"
                    android:layout_marginLeft="8dip"
                    android:layout_marginTop="5dp"
                    android:text="活动说明"
                    android:textColor="#800080"
                    android:textSize="14sp" />

                <TextView
				    android:id="@+id/active_one_a_descrip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:text="活动介绍。。。"
                    android:paddingLeft="8dip"
                    android:textColor="#333333"
                    android:textSize="14sp" />

            </LinearLayout>
            
            

            <Button
                android:id="@+id/active_one_btn_join"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="发出邀请"
                android:textColor="#ffffff"
                android:background="@drawable/btn_style_purple"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
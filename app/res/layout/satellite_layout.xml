<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sat="http://schemas.android.com/apk/res/firefist.wei.main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/sate_layout"
    android:orientation="vertical" >

    <firefist.wei.satellite.SatelliteMenu
        android:id="@+id/sate_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left" 
        android:layout_margin="8dp"
        sat:satelliteDistance="120dp"
        sat:mainImage="@drawable/sat_main"
        sat:totalSpacingDegree="90"
        sat:closeOnClick="true"
        sat:expandDuration="500"/>
    
</FrameLayout>